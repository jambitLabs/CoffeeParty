<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jambit.coffeeparty"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    

    <application
        android:name=".CoffeePartyApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AvatarActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        
        <activity 
            android:name=".NumberOfPlayersActivity"
            android:screenOrientation="landscape" />
        <activity 
            android:name=".GameBoardActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="landscape" />
        <activity 
            android:name=".CatchGameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MinigameBaseActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MinigameStartActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".DisplayResultActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MinigameWhackAMole"
            android:screenOrientation="landscape" />
        <activity
            android:name=".BallMazeMinigame"
            android:screenOrientation="landscape" />
